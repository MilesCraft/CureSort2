@model CureSort2.Models.Flag

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Flag</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="FlagID" />
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicalDeviceID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="MedicalDeviceID" class="form-control" asp-items="ViewBag.MedicalDeviceID" visible="false"></select>
                <span asp-validation-for="MedicalDeviceID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Problem" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Problem" class="form-control" required="required">
                    <option value="Incorrect Barcode">Incorrect Barcode</option>
                    <option value="Product Code Error">Product Code Error</option>
                    <option value="Incorrect Description">Incorrect Description</option>
                    <option value="Wrong Brand">Wrong Brand</option>
                    <option value="Wrong Manufacturer">Wrong Manufacturer</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Problem" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Warehouse" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Warehouse" class="form-control" required="required">
                    <option value="Chicago">Chicago</option>
                    <option value="Denver">Denver</option>
                    <option value="Houston">Houston</option>
                    <option value="Nashville">Nashville</option>
                    <option value="Philadelphia">Philadelphia</option>
                    <option value="Phoenix">Phoenix</option>
                </select>
                <span asp-validation-for="Warehouse" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReviewedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReviewedBy" class="form-control" />
                <span asp-validation-for="ReviewedBy" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="DateSubmitted" />
    <input type="hidden" asp-for="DateReviewed" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
