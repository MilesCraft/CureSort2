@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron" style="text-align:center">
    <h1>C.U.R.E. <img src="/images/cureicon.png" height="100" width="100"/> Sort</h1>
</div>
<div class="row">
    <div style="text-align:center">
        <p>Welcome to C.U.R.E. Sort. Here you can scan in barcodes from items or search for their name.</p>
        <h3>Please scan or search your item in below.</h3>
        <form action="/medicaldevices">
            <img src="/images/barcode.gif" /><br />
            <br/>
            <p>
                <input id="SearchBox" type="text" placeholder="Search" style="margin-top:12px; width:200px" name="barcode" onkeypress="handle(event)" />
            </p>
        </form>
    </div>
</div>
<script>
        window.onload = function () {
            document.getElementById("SearchBox").focus();
        };

    function handle(e){
        if(e.keyCode === 13){
            e.preventDefault(); // Ensure it is only this code that rusn

            window.location.href = ('/medicaldevices?barcode=' + SearchBox.value.toString())
        }
    }
</script>

